<!--pages/user_infor/user_infor.wxml--> 
<view class="container_me">
  <view class="avatar">
    <image bindtap="changeAvatar" src="{{ infor.avatar }}" />
  </view>
  <view class="name">{{ infor.name }}</view>
  <view class="item">
    <text>自我介绍：</text>
    <text>{{infor.intro?infor.intro:"无"}}</text> 
  </view>
  <view class="item">
    <text>身份：</text>
    <text>{{infor.status?infor.status:"无"}}</text> 
     </view>
      <view class="item">
    <text>学校：</text>
    <text >{{infor.school?infor.school:"无"}}</text> 
  </view>
    <view class="item">
    <text>项目：</text>
    <text >{{infor.project?infor.project:"无"}}</text> 
  </view>
    <view class="item">
    <text>电台：</text>
    <text>{{infor.radio?infor.radio:"无"}}</text> 
  </view>
</view>

<view>
<button bindtap="">关注</button> 
</view>
 
